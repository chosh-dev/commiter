# LLM provider (Optional, default: openai) â€” choose between "openai" and "bedrock"
COMMITER_LLM_PROVIDER=openai

# OpenAI settings
# API Key (Required when using OpenAI)
COMMITER_OPENAI_API_KEY=sk-...
# LLM Model (Optional, default: gpt-5.2)
COMMITER_OPENAI_MODEL=gpt-5.2
# Base URL (Optional, default: https://api.openai.com/v1)
COMMITER_OPENAI_BASE_URL=https://api.openai.com/v1

# Amazon Bedrock settings
# Region (Required when using Bedrock)
COMMITER_BEDROCK_REGION=us-east-1
# Base URL (Optional, default: AWS Bedrock runtime endpoint for the region)
COMMITER_BEDROCK_BASE_URL=https://bedrock-runtime.us-east-1.amazonaws.com
# Model ID (Optional, defaults to Claude 4.5 Sonnet)
COMMITER_BEDROCK_MODEL=claude-4.5-sonnet
# Credentials (use either a profile or access keys)
COMMITER_AWS_PROFILE=default
COMMITER_AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY
COMMITER_AWS_SECRET_ACCESS_KEY=YOUR_SECRET_ACCESS_KEY
COMMITER_AWS_SESSION_TOKEN=YOUR_SESSION_TOKEN
