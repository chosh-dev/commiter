# LLM provider (Optional, default: openai) â€” choose between "openai" and "bedrock"
LLM_PROVIDER=openai

# OpenAI settings
# API Key (Required when using OpenAI)
OPENAI_API_KEY=sk-...
# LLM Model (Optional, default: gpt-5.2)
OPENAI_MODEL=gpt-5.2
# Base URL (Optional, default: https://api.openai.com/v1)
OPENAI_BASE_URL=https://api.openai.com/v1

# Amazon Bedrock settings
# Region (Required when using Bedrock)
BEDROCK_REGION=us-east-1
# Base URL (Optional, default: AWS Bedrock runtime endpoint for the region)
BEDROCK_BASE_URL=https://bedrock-runtime.us-east-1.amazonaws.com
# Model ID (Optional, defaults to Claude 4.5 Sonnet)
BEDROCK_MODEL=claude-4.5-sonnet
# Credentials (use either a profile or access keys)
AWS_PROFILE=default
AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_SECRET_ACCESS_KEY
AWS_SESSION_TOKEN=YOUR_SESSION_TOKEN
