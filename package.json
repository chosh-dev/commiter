{
  "name": "@chosh/commiter",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "CLI that groups git hunks into semantic, reviewable commits using OpenAI or Bedrock.",
  "keywords": [
    "git",
    "cli",
    "commit",
    "llm"
  ],
  "license": "MIT",
  "main": "./dist/cli/index.js",
  "bin": {
    "commiter": "./dist/cli/index.js",
    "cm": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "dev": "node --enable-source-maps dist/cli/index.js",
    "start": "node dist/cli/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.679.0",
    "chalk": "^5.3.0",
    "dotenv": "^17.2.3",
    "es-toolkit": "^1.43.0",
    "openai": "^6.13.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.50.0"
  }
}
